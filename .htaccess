# archivo .htaccess 
# directivas de configuracion de apache
# manual de apache

RewriteEngine on

RewriteRule ^home$ controllers/home.php
RewriteRule ^catalogo$ controllers/listadoprincipal.php
RewriteRule ^catalogo/producto$ controllers/verproducto.php
RewriteRule ^login$ controllers/login_register.php
RewriteRule ^logout$ controllers/logout.php

RewriteRule ^admin$ controllers/paneladmin.php
RewriteRule ^admin/altaproducto$ controllers/altaproducto.php
RewriteRule ^admin/inventario$ controllers/inventario.php
RewriteRule ^admin/stock$ controllers/verstock.php
RewriteRule ^admin/modificarproducto$ controllers/modificar_producto.php
RewriteRule ^admin/altaok$ controllers/altaok.php
RewriteRule ^admin/listadopedidosadm$ controllers/listadopedidosadm.php
RewriteRule ^admin/verpedidoadm$ controllers/verdetallepedidoadm.php

RewriteRule ^user$ controllers/userpanel.php
RewriteRule ^verpedido$ controllers/verdetallepedido.php
RewriteRule ^listadopedidos$ controllers/listadopedidos.php
RewriteRule ^carrito$ controllers/carrito.php
RewriteRule ^pedidoOk$ controllers/pedidoOk.php


